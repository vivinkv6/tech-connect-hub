<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Rubik+Glitch&family=Russo+One&family=Saira+Stencil+One&family=Ubuntu+Condensed&family=Unica+One&display=swap"
      rel="stylesheet"
    />

    <!-- AOS  -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/admin/dashboard.css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css"
    />
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Saira+Stencil+One&display=swap');
      </style>

    <title>Admin Dashboard</title>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <%- include('components/nav') %>

        <!-- Content -->
        <div class="content col-md-9 table-responsive">
          <!-- Table -->
          <table class="table table-bordered caption-top">
          
            <div style="width: 100%;display: flex;justify-content: flex-end;">
              <a href="/admin/report/publisher" class="btn btn-primary">Generate Report</a>
            </div>

            <% if (publishers.length==0) { %>
              <h2 class="text-center text-secondary">No Publishers</h2>
            <% }else{ %>
              <caption>
                List of Publishers
              </caption>
              <thead class="thead-dark">
                <tr>
                  <th class="text-dark">SlNo.</th>
                  <th class="text-dark">Name</th>
                  <th class="text-dark">Community</th>
                  <th class="text-dark">Email</th>
                  <th class="text-dark">Role</th>
                  <th class="text-dark">Proof</th>
                  <th class="text-dark">Social Media</th>
                  <th class="text-dark">Place</th>
                  <th class="text-dark">Mobile</th>
                  <th class="text-dark">Action</th>
                </tr>
              </thead>
  
              <tbody>
                <% for( let i = 0; i < publishers.length; i++ ) { %>
                
               
                <tr>
                  <td><%= i+1 %></td>
                  <td><%= publishers[i].dataValues.name %></td>
                  <td><%= publishers[i].dataValues.community %></td>
                  <td><%= publishers[i].dataValues.email %></td>
                  <td><%= publishers[i].dataValues.role %></td>
                  <td><a href="<%= publishers[i].dataValues.proof %>" target="_blank"><img src="<%= publishers[i].dataValues.proof %>" style="object-fit: contain;" height="50" width="50" alt="ID proof"></a></td>
                  <td><%= publishers[i].dataValues.socialmedia%></td>
                  <td><%= publishers[i].dataValues.place %></td>
                  <td><%= publishers[i].dataValues.mobile %></td>
                  <td>
                    <a href="/admin/dashboard/publisher/delete/<%= publishers[i].dataValues.id %>" class="btn btn-danger"><i class="bi bi-trash me-2"></i>Delete</a>
                  </td>
                </tr>
                <% } %>
              
            </tbody>
            <% } %>
          </table>
        </div>
      </div>
    </div>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
      AOS.init();
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
