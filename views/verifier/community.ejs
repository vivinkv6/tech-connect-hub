<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Rubik+Glitch&family=Russo+One&family=Saira+Stencil+One&family=Ubuntu+Condensed&family=Unica+One&display=swap"
      rel="stylesheet"
    />

    <!-- AOS  -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/verifier/dashboard.css" />

    <title>Verifier Dashboard</title>
  </head>
  <body>
    <div class="grid-container">
      <!-- Sidebar -->
      <div class="sidebar bg bg-light shadow-lg">
        <div class="sidebar-header">
          <a href="#" class="sidebar-logo">
            <span
              class="text-xs sm:text-sm md:text-base text-secondary"
              style="font-family: 'Saira Stencil One', sans-serif"
              >Verifier Dashboard</span
            >
          </a>
        </div>
        <div class="sidebar-nav">
          <!-- <a href="#">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></svg>
              Home
            </a> -->
          <a href="/verifier/<%= id %>/dashboard" class="bg-gray-100">
            <i class="bi bi-person-circle" style="font-size: 20px"></i>
            Profiles
            <div class="badge bg-primary"><%=profileCount %></div>
          </a>
          <a href="/verifier/<%= id %>/dashboard/community">
            <i class="bi bi-building" style="font-size: 20px"></i>
            Community
            <div class="badge bg-primary"><%=communityCount %></div>
          </a>
          <a href="/verifier/<%= id %>/dashboard/logout">
            <i class="bi bi-box-arrow-left" style="font-size: 20px"></i>
            Logout
          </a>
        </div>
      </div>

      <!-- Nav2 -->

      <nav class="navbar nav2 bg-body-tertiary fixed-top bg-light shadow-lg">
        <div class="container-fluid">
          <a href="#" class="sidebar-logo">
            <h4
              class="text-xs text-secondary"
              style="font-family: 'Saira Stencil One', sans-serif"
            >
              Verifier Dashboard
            </h4>
          </a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="offcanvas"
            data-bs-target="#offcanvasNavbar"
            aria-controls="offcanvasNavbar"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon">
              <i class="bi bi-list text-dark fs-1"></i>
            </span>
          </button>
          <div
            class="offcanvas offcanvas-end"
            tabindex="-1"
            id="offcanvasNavbar"
            aria-labelledby="offcanvasNavbarLabel"
          >
            <div class="offcanvas-header">
              <a href="#" class="sidebar-logo">
                <h4
                  class="text-xs text-secondary"
                  style="font-family: 'Saira Stencil One', sans-serif"
                >
                  Verifier Dashboard
                </h4>
              </a>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="offcanvas"
                aria-label="Close"
              ></button>
            </div>
            <div class="offcanvas-body">
              <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                <li class="nav-item mb-3">
                  
                  <a href="/verifier/<%= id %>/dashboard" class="bg-gray-100 text-secondary">
                    <i class="bi bi-person-circle" style="font-size: 20px"></i>
                    Profiles
                    <div class="badge bg-primary"><%=profileCount %></div>
                  </a>
                </li>
                <li class="nav-item mb-3">
                  <a href="/verifier/<%= id %>/dashboard/community" class="text-secondary">
                    <i class="bi bi-building" style="font-size: 20px"></i>
                    Community
                    <div class="badge bg-primary"><%=communityCount %></div>
                  </a>
                </li>
                <li class="nav-item mb-3">
                  <a href="/verifier/<%= id %>/dashboard/logout" class="text-secondary">
                    <i class="bi bi-box-arrow-left" style="font-size: 20px"></i>
                    Logout
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </nav>

      <!-- Main Content -->
      <div class="main-content mt-5" style="overflow: scroll">
        <div class="container mt-5">
          <h2>Recent Communities</h2>
          <hr />
          <div class="table-responsive">
            <% if (community.length==0) { %>
            <h2 class="mt-5">No Communities Found</h2>
            <% }else{ %>
            <table class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>Logo</th>
                  <th>name</th>
                  <th>Email</th>
                  <th>place</th>
                  <th>mobile</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% for( let i = 0; i < community.length; i++ ) { %>
                <tr>
                  <td>
                    <img
                      src="<%= community[i].dataValues.logo %>"
                      height="100"
                      width="100"
                      alt=""
                    />
                  </td>
                  <td><%= community[i].dataValues.name %></td>
                  <td><%= community[i].dataValues.email%></td>
                  <td><%= community[i].dataValues.place%></td>
                  <td><%= community[i].dataValues.mobile %></td>
                  <th>
                    <button class="btn btn-dark text-light">
                      <a
                        href="/verifier/<%= id %>/dashboard/community/<%=community[i].dataValues.id  %>"
                        >View Profille</a
                      >
                    </button>
                  </th>
                </tr>
                <% } %>
              </tbody>
            </table>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
      AOS.init();
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
