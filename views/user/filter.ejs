                    >
                    <% } else if (post[i].state === "Rajasthan") { %>
                    <span
                      class="badge badge-primary"
                      style="background-color: #e25822"
                      >Rajasthan</span
                    >
                    <% } else if (post[i].state === "Sikkim") { %>
                    <span
                      class="badge badge-primary"
                      style="background-color: #0198e1"
                      >Sikkim</span
                    >
                    <% } else if (post[i].state === "Tamil Nadu") { %>
                    <span
                      class="badge badge-primary"
