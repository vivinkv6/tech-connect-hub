                    <% } else if (post[i].state === "Telangana") { %>
                    <span
                      class="badge badge-primary"
                      style="background-color: #7d3c98"
                      >Telangana</span
                    >
                    <% } else if (post[i].state === "Tripura") { %>
                    <span
                      class="badge badge-primary"
                      style="background-color: #a2a2a2"
